
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username      String        @id
  email         String        @unique
  passwordHash      String?
  hashedRefreshToken String?
  name          String?
  image         String?
  provider      AuthProvider  @default(LOCAL)
  providerId    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([provider, providerId], name: "idx_user_provider_lookup")
  @@index([createdAt], name: "idx_user_created_at")
}

enum AuthProvider {
  LOCAL
  GOOGLE
  APPLE
  GITHUB
}

