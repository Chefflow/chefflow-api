
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username      String        @id
  email         String        @unique
  passwordHash  String?       
  name          String?
  image         String?
  provider      AuthProvider  @default(LOCAL)
  providerId    String?       
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum AuthProvider {
  LOCAL
  GOOGLE
  APPLE
  GITHUB
}

