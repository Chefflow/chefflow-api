# Database Configuration
# For development: use localhost
# For Docker: use service name (postgres)
DATABASE_URL="postgresql://chefflow_user:chefflow_password@localhost:5432/chefflow?schema=public"

# Docker PostgreSQL Configuration (used by docker-compose.yml)
POSTGRES_DB="chefflow"
POSTGRES_USER="chefflow_user"
POSTGRES_PASSWORD="chefflow_password"

# Application Settings
NODE_ENV="development"
PORT=4000

# Security (IMPORTANT: Generate strong values for production)
# Use: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
CSRF_SECRET="your-csrf-secret-key-here"

# JWT Refresh Token Configuration
JWT_REFRESH_SECRET="your-refresh-token-secret-here"
JWT_REFRESH_EXPIRES_IN="7d"

# Frontend URL (for OAuth redirects)
FRONTEND_URL="http://localhost:3000"

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Rate Limiting
# TTL in seconds, LIMIT is number of requests per TTL window
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Google OAuth2
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"

